@page "/employees"
@using Cas.SaaS.Contracts.Employee;
@using Microsoft.AspNetCore.Authorization;
@inject Helpers.HttpClientHelper Http
@attribute [Authorize(Roles = "Client")]

<PageTitle>Сотрудники</PageTitle>

<h1>Список сотрудников</h1>

<div class="form-group">
    <a class="btn btn-success" href="employee/create">Добавить сотрудника</a>
</div>

@if (employees is null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else if (employees.Count() <= 0)
{
    <div class="text-center">
        <p>Список сотрудников пуст</p>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Номер телефона</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in employees)
            {
                <tr>
                    <td>@employee.Surname @employee.Name @employee.Patronymic</td>
                    <td>@employee.Phone</td>
                    <th>
                        <div class="row">
                            <a href="/employee/@employee.Id/update" class="btn btn-primary col m-1">Обновить</a>
                            <a href="/employee/@employee.Id/details" class="btn btn-info col text-white m-1">Детали</a>
                            <button @onclick="() => EmployeeDeleteAsync(employee.Id)" class="btn btn-danger col m-1">Удалить</button>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private EmployeeDto[]? employees;

    protected override async Task OnInitializedAsync()
    {
        employees = await Http.GetEmployeesAsync();
    }

    public async Task EmployeeDeleteAsync(Guid id)
    {
        await Http.DeleteEmployeeById(id);
        await OnInitializedAsync();
    }
}
